#!/bin/sh

# cleanup
rm -Rf root/instances/test.example
echo 'set client_min_messages='"'"'warning'"'"'; drop schema "test.example" cascade;' | psql cidercms

if [ "$1" == "cover" ] ; then
	make clean
	perl Makefile.PL
	make
	echo
	TEST_POD=1 cover -test
else
	# to make Test::POD work
	make
	echo
	TEST_POD=1 prove -l t
fi

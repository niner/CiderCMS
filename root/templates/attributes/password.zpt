<div xmlns:tal="http://purl.org/petal/1.0/" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="CiderCMS">
    <label class="password">
        <span tal:content="self/name"/>
        <input type="password" size="40" tal:attributes="name self/id"/>
    </label>
    <label class="password_repeat">
        <span>Repeat</span>
        <input type="password" size="40"/>
        <span class="repeat_error">Password not repeated correctly</span>
    </label>
</div>

<label xmlns:tal="http://purl.org/petal/1.0/" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="CiderCMS">
    <span tal:content="self/name"/>
    <select size="1" tal:attributes="name self/id">
        <option value="1" tal:attributes="selected if:  true:self/data then: string:selected else: undef">yes</option>
        <option value="0" tal:attributes="selected if: false:self/data then: string:selected else: undef">no</option>
    </select>
</label>
